<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1CFD1"
    tools:context=".librarian.ManageMember">

    <LinearLayout
        android:id="@+id/addMemberPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1CFD1"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="iLibrary Member"
            android:textAlignment="center"
            android:textColor="#1A373C"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ID Member"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/IDmember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter ID Member"
                android:inputType="number"
                android:textColor="#0B4E61" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Full Name"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/nameMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Member Full Name"
                android:textColor="#0B4E61" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Address"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/addressMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Member Address"
                android:textColor="#0B4E61" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Phone Number"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/phoneMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Member Phone Number"
                android:inputType="phone"
                android:textColor="#0B4E61" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="E-mail"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <EditText
                android:id="@+id/emailMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Member E-mail Address"
                android:inputType="textWebEmailAddress"
                android:textColor="#0B4E61" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline" />

        <Button
            android:id="@+id/save_member_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0B4E61"
            android:text="SAVE MEMBER"
            android:textColor="#B1CFD1" />

    </LinearLayout>
</ScrollView>