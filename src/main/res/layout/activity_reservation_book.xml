<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1CFD1"
    tools:context=".member.ReservationBook">

    <LinearLayout
        android:id="@+id/addMemberPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B1CFD1"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="iLibrary Book Reservation"
            android:textAlignment="center"
            android:textColor="#1A373C"
            android:textSize="34sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ID Book"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <TextView
                android:id="@+id/IDbook_resv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Book ID"
                android:textColor="#0B4E61"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book Title"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <TextView
                android:id="@+id/titleBook_resv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Book Title"
                android:textColor="#0B4E61"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book Subject"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <TextView
                android:id="@+id/subjectBook_resv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Book Subject"
                android:textColor="#0B4E61"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Author"
            android:textColor="#1A373C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline">

            <TextView
                android:id="@+id/authorBook_resv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Book Author"
                android:textColor="#0B4E61"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/reservation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0B4E61"
            android:text="RESERVE NOW"
            android:textColor="#B1CFD1" />

    </LinearLayout>
</ScrollView>